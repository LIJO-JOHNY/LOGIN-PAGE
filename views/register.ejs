<%- include('header') -%>
    <div class="text-center text-white center-div" id="login">
        <div class="container w-25 border rounded-pill border-dark py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold ">Register</h2>
                <span>Register with your mail-address</span>
                <% if (locals.error) { %>
                    <div class="alert alert-danger text-center">
                        <%= error %>
                    </div>
                <% } %>
            </div>
            <form action="/register" method="POST" class="pt-3">
                <div class="form-group">
                    <label style="float: left;" for="name">Name</label>
                    <input style="float: right;" type="text" class="form-control mb-2" oninput="validateName()" id="name" name="name" ><br>
                    <span id="namems" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="float: left;" for="email" >Email</label>
                    <input type="email" class="form-control mb-2" oninput="validateEmail()" id="email" name="email" >
                    <span id="emailms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="float: left;" for="password">Password</label>
                    <input type="password" class="form-control mt-2" id="password" name="password" oninput="validatePassword()">
                    <span id="passwordms" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success rounded-pill mt-2" id="registrationbtn">Register</button>
            </form><br>
            <a href="/login">Login</a>



<%- include('footer') -%>